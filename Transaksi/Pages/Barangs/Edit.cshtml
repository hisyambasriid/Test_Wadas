@page
@model Transaksi.Pages.Barangs.EditModel
<form method="post">
    <input hidden asp-for="Barang.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3"> Update Barang</h2>
            <hr />
        </div>
        <div class="row mb-3">
            <div class="row pb-2">
                <label asp-for="Barang.Nama"></label>
                <input asp-for="@Model.Barang.Nama" class="form-control"/>
                <span asp-validation-for="Barang.Nama" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="row pb-2">
                <label asp-for="Barang.Harga"></label>
                <input asp-for="@Model.Barang.Harga" class="form-control"/>
                <span asp-validation-for="Barang.Harga" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="row pb-2">
                <label asp-for="Barang.Satuan"></label>
                <input asp-for="@Model.Barang.Satuan" class="form-control"/>
                <span asp-validation-for="Barang.Satuan" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
         <a asp-page="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }

}