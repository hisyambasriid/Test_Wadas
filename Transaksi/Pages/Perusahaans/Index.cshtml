@page
@model Transaksi.Pages.Perusahaans.IndexModel
<partial name="_Notification" />
<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">List Perusahaan</h2>
        </div>
        <div class="col-6">
            <a asp-page="create" class="btn btn-primary">Create Perusahaan</a>
        </div>
    </div>
    <br/><br/>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Nama Perusahaan
                </th>
                <th>
                    Alamat
                </th>
                 <th>
                    No.Telpon
                </th>
                <th>
                    Fax
                </th>
                <th>
                    Bidang Usaha
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Perusahaans)
            {
                <tr>
                    <td width="25%">@obj.Nama</td>
                    <td width="25%">@obj.Alamat</td>
                    <td width="25%">@obj.NoTelpon</td>
                    <td width="25%">@obj.Fax</td>
                    <td width="25%">@obj.BidangUsaha</td>
                    <td width="25%">
                        <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>
