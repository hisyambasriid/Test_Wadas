@page
@model Transaksi.Pages.Barangs.DeleteModel
<form method="post">
    <input hidden asp-for="Barang.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3"> Delete Barang</h2>
            <hr />
        </div>
        <div class="row mb-3">
            <div class="row pb-2">
                <label asp-for="Barang.Nama"></label>
                <input asp-for="@Model.Barang.Nama" disabled class="form-control"/>
            </div>
        </div>
        <div class="row mb-3">
            <div class="row pb-2">
                <label asp-for="Barang.Harga"></label>
                <input asp-for="@Model.Barang.Harga" disabled class="form-control"/>
            </div>
        </div>
        <div class="row mb-3">
            <div class="row pb-2">
                <label asp-for="Barang.Satuan"></label>
                <input asp-for="@Model.Barang.Satuan" disabled class="form-control"/>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Delete</button>
         <a asp-page="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
